<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/usuario"
        android:layout_marginTop="92dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/contrasena"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/usuario"
        android:layout_alignLeft="@+id/usuario"
        android:layout_alignStart="@+id/usuario"
        android:layout_alignRight="@+id/usuario"
        android:layout_alignEnd="@+id/usuario" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnIngresar"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/contrasena"
        android:layout_alignLeft="@+id/contrasena"
        android:layout_alignStart="@+id/contrasena"
        android:layout_alignRight="@+id/contrasena"
        android:layout_alignEnd="@+id/contrasena" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario"
        android:id="@+id/lblUsuario"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/usuario"
        android:layout_alignStart="@+id/usuario"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ContraseÃ±a"
        android:id="@+id/lblcontrasena"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/usuario"
        android:layout_alignLeft="@+id/contrasena"
        android:layout_alignStart="@+id/contrasena" />
</RelativeLayout>